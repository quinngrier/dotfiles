#! /bin/sh -
#
# Usage: f-gpg1 [<arg>...]
#
# Finds and runs gpg1 with the given arguments.
#

gpg1=gpg1
if ${GPG1:+:} false; then
  gpg1=$GPG1
elif command -v gpg1 >/dev/null 2>&1; then
  :
elif command -v gpg >/dev/null 2>&1; then
  case `gpg --version 2>/dev/null` in
    'gpg (GnuPG) 1.'*)
      gpg1=gpg
    ;;
  esac
fi

case $# in
  0)
    eval "$gpg1"
    exit $?
  ;;
  *)
    eval "$gpg1"' "$@"'
    exit $?
  ;;
esac

