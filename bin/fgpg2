#! /bin/sh -
#
# Usage: fgpg2 [<arg>...]
#
# Finds and runs gpg2 with the given arguments.
#

export LC_ALL=C

gpg2=gpg2
if ${GPG2:+:} false; then
  gpg2=$GPG2
elif command -v gpg2 >/dev/null 2>&1; then
  :
elif command -v gpg >/dev/null 2>&1; then
  case `gpg --version 2>/dev/null` in
    'gpg (GnuPG) 2.'*)
      gpg2=gpg
    ;;
  esac
fi
readonly gpg2

case $# in
  0)
    eval "$gpg2"
    exit $?
  ;;
  *)
    eval "$gpg2"' "$@"'
    exit $?
  ;;
esac

