#! /bin/sh -
#
# Usage: git d [<commit=master>]
#
# Deletes all branches that are reachable from <commit>.
#

case $#,$1 in
  1,--help)
    cat <<'EOF'
Usage: git d [<commit=master>]

Deletes all branches that are reachable from <commit>.
EOF
    exit 0
  ;;
  0, | 1,*)
    :
  ;;
  *)
    cat >&2 <<'EOF'
git-d: bad usage, try --help
EOF
    exit 1
  ;;
esac

git=" ${GIT:-git}"
readonly git

commit=${1-master}
readonly commit

head=`eval "$git"' rev-parse --symbolic-full-name HEAD'` || exit $?
readonly head

branches=`eval "$git"' \
  for-each-ref \
  --format="%(refname)" \
  --merged="$commit" \
  "refs/heads/*" \
;'` || exit $?
readonly branches

set x $branches
shift
for branch; do
  case $branch in
    "$head")
      continue
    ;;
  esac
  hash=`eval "$git"' rev-parse --short "$branch"'` || exit $?
  cat <<EOF || exit $?
deleting $branch ($hash)
EOF
  eval "$git"' update-ref -d "$branch"' || exit $?
done

exit 0

