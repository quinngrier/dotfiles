#! /bin/sh -
#
# Usage: git u [<remote=upstream> [<branch=master>]]
#
# Checks out <branch>, then fetches and merges from <remote>.
#

case $# in
  0 | 1 | 2) ;;
  *)
    cat >&2 <<'EOF'
Usage: git u [<remote=upstream> [<branch=master>]]

Checks out <branch>, then fetches and merges from <remote>.
EOF
    exit 1
  ;;
esac

r=${1-upstream}
b=${2-master}
git checkout "$b" || exit $?
git fetch -n -- "$r" "$b" || exit $?
git merge -m "Merge $r/$b into $b" -- "$r/$b" || exit $?

