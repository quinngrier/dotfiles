#! /bin/sh -

LC_ALL=C
readonly LC_ALL
export LC_ALL

readonly git="${GIT:-git}"
readonly sed="${SED:-sed}"

remote=upstream
branch=master

parse_options=:
operand_var=

until (exit ${1+1}0); do

  if $parse_options; then
    case $1 in

      --)
        parse_options=false
        shift
        continue
      ;;

      --=*)
        cat <<EOF >&2
$0: the -- option forbids an argument: $1
$0: run "git-u --help" for help
EOF
        exit 1
      ;;

      -h* | --help)
        cat <<'EOF' || exit $?
Usage: git u [<remote=upstream> [<branch=master>]]

Switches to <branch>, then fetches and merges it from <remote>.
EOF
        exit 0
      ;;

      --help=*)
        cat <<EOF >&2
$0: the --help option forbids an argument: $1
$0: run "git-u --help" for help
EOF
        exit 1
      ;;

      --*)
        script='
          s/'\''/'\''\\'\'''\''/g
          1 s/^/'\''/
          /=/ {
            s/=.*/'\''/
            q
          }
          $ s/$/'\''/
        '
        option=`eval " $sed"' "$script"' <<EOF
$1
EOF
        ` || exit $?
        eval option="$option"
        cat <<EOF >&2
$0: unknown option: $option
$0: run "git-u --help" for help
EOF
        exit 1
      ;;

      -'
'*)
        cat <<EOF >&2
$0: unknown option: -

$0: run "git-u --help" for help
EOF
        exit 1
      ;;

      -?*)
        option=`head -c 2 <<EOF
$1
EOF
        ` || exit $?
        cat <<EOF >&2
$0: unknown option: $option
$0: run "git-u --help" for help
EOF
        exit 1
      ;;

    esac
  fi

  case $operand_var in
    '') operand_var=remote ;;
    remote) operand_var=branch ;;
    branch)
      cat <<EOF >&2
$0: too many operands: $1
$0: run "git-u --help" for help
EOF
      exit 1
    ;;
  esac

  eval $operand_var='$1'
  shift

done

readonly remote
readonly branch

case $remote in
  -*)
    cat <<EOF >&2
$0: <remote> must not begin with a - character: $remote
$0: run "git-u --help" for help
EOF
    exit 1
  ;;
esac

case $branch in
  -*)
    cat <<EOF >&2
$0: <branch> must not begin with a - character: $branch
$0: run "git-u --help" for help
EOF
    exit 1
  ;;
esac

readonly message="Merge $remote/$branch into $branch"

eval " $git"' checkout "$branch"' || exit $?
eval " $git"' fetch -n "$remote" "$branch"' || exit $?
eval " $git"' merge -m "$message" "$remote/$branch"' || exit $?

exit 0

