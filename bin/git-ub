#! /bin/sh -
#
# Usage: git ub <branch> [<remote=upstream> [<start=master>]]
#
# Checks out <start>, then fetches and merges it from <remote>, then
# starts <branch> from it. If <branch> already exists as an ancestor of
# <start>, then it will be recreated.
#

case $# in
  1 | 2 | 3) ;;
  *)
    cat >&2 <<'EOF'
Usage: git ub <branch> [<remote=upstream> [<start=master>]]

Checks out <start>, then fetches and merges it from <remote>, then
starts <branch> from it. If <branch> already exists as an ancestor of
<start>, then it will be recreated.
EOF
    exit 1
  ;;
esac

git=${_:?}

branch=$1
remote=${2-upstream}
start=${3-master}
"$git" u "$remote" "$start" || exit $?
"$git" rev-parse --verify -q "$branch"
s=$?
case $s in
  0) "$git" branch -d "$branch" || exit $? ;;
  1) ;;
  *) exit $s ;;
esac
"$git" checkout -b "$branch" || exit $?

