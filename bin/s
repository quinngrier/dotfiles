#! /bin/sh -

export LC_ALL=C

case $# in
  0 | 1)
    cat <<'EOF' >&2
This script should only be run with the s alias.
EOF
    exit 1
  ;;
esac

case $1 in
  s_alias_jobs)
    :
  ;;
  *)
    cat <<'EOF' >&2
This script should only be run with the s alias.
EOF
    exit 1
  ;;
esac

s_alias_jobs=$2
readonly s_alias_jobs

shift 2

git=" ${GIT:-git}"
readonly git

case $#,$1 in
  1,--help)
    cat <<'EOF'
Usage: s

Show status.
EOF
    exit 0
  ;;
  0,)
    :
  ;;
  *)
    cat <<'EOF' >&2
Bad usage. Try "s --help".
EOF
    exit 1
  ;;
esac

case $s_alias_jobs in
  ?*)
    cat <<EOF || exit $?
$s_alias_jobs
EOF
  ;;
esac

eval "$git"' status -s --ignored' || exit $?

exit 0

