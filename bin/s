#! /bin/sh -

export LC_ALL=C

case $#,$1 in
  1,--help)
    cat <<'EOF'
Usage: s

Show status.
EOF
    exit 0
  ;;
  0,)
    :
  ;;
  *)
    cat >&2 <<'EOF'
Bad usage. Try "s --help".
EOF
    exit 1
  ;;
esac

readonly git=" ${GIT:-git}"

jobs -l || exit $?

eval "$git"' status -s --ignored' || exit $?

exit 0

