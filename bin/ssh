#-----------------------------------------------------------------------

remove_home_bin='
  s|:'$HOME'/bin||g
  s|^'$HOME'/bin:||
  s|^'$HOME'/bin$||
'
readonly remove_home_bin

PATH_WITHOUT_HOME_BIN=`
  LC_ALL=C eval " ${SED:-sed}"' "$remove_home_bin"' <<EOF
$PATH
EOF
` || exit $?
readonly PATH_WITHOUT_HOME_BIN

ssh=`
  PATH=$PATH_WITHOUT_HOME_BIN command -v ssh
` || exit $?
readonly ssh

#-----------------------------------------------------------------------

s=0
command -v ssh-agent >/dev/null || s=$?
case ${s?} in 0)
  case $# in 0)
    exec ssh-agent "${ssh?}"
  ;; *)
    exec ssh-agent "${ssh?}" "$@"
  esac
;; 1)
  case $# in 0)
    exec "${ssh?}"
  ;; *)
    exec "${ssh?}" "$@"
  esac
;; *)
  exit ${s?}
esac
